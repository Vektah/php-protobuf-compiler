{
    "name": "vektah/php-protobuf-compiler",
    "description": "Compiles .proto files into PSR-2 compliant .php files",
    "homepage" : "https://github.com/Vektah/php-protobuf-compiler",
    "license" : "BSD-2-Clause",

    "authors" : [
        {
            "name": "Adam Scarr",
            "email": "scarr.adam@gmail.com",
            "homepage": "http://github.com/Vektah",
            "role": "Developer"
        }
    ],

    "autoload": {
        "psr-0": {
            "vektah\\protobuf": "src/main"
        }
    },

    "require": {
        "php": ">=5.4.0",
        "symfony/console": "*",
        "vektah/parser-combinator": "0.2.*",
		"vektah/common": "*",
        "twig/twig" : "*"
    },

    "bin": [
        "bin/pprotoc"
    ],

    "require-dev": {
        "phpunit/phpunit": "3.7.21",
        "symfony/process": "*",
        "phake/phake": "2.0.0-alpha2",
        "squizlabs/php_codesniffer" : "1.4.5",
        "vektah/bugfree-dangerzone": "0.2.6",
        "vektah/psr2": "*"
    }
}
